<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:clickable="true"
    android:focusable="true"
    android:longClickable="false"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/cell_currencySymbol"
        android:layout_width="@dimen/fortyeightdp"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:layout_alignTop="@id/lyt_data_holder"
        android:layout_alignBottom="@id/lyt_data_holder"
        android:fontFamily="@font/os_light"
        android:textAlignment="center"
        android:textColor="@color/whitebg"
        android:textSize="@dimen/sixteensp" />

    <RelativeLayout
        android:id="@+id/lyt_data_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/cell_currencySymbol"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cell_currencyRateValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sixteendp"
            android:fontFamily="@font/os_bold"
            android:paddingLeft="@dimen/sixteendp"
            android:paddingRight="@dimen/sixteendp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/whitebg"
            android:textSize="@dimen/fortysp" />

        <TextView
            android:id="@+id/cell_currencyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cell_currencyRateValue"
            android:layout_marginTop="@dimen/eightdp"
            android:layout_marginBottom="@dimen/sixteendp"
            android:fontFamily="@font/os_bold"
            android:paddingLeft="@dimen/sixteendp"
            android:paddingRight="@dimen/sixteendp"
            android:textColor="@color/red"
            android:textSize="@dimen/sixteensp" />

    </RelativeLayout>

</RelativeLayout>