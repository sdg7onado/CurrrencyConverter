<resources>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="android:statusBarColor">@color/whitebg</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">#000000</item>

        <!-- <item name="android:colorPrimaryDark">@color/primary_dark</item>
         <item name="android:colorPrimary">@color/primary_dark</item>
         <item name="android:colorAccent">@color/primary_dark</item>-->
    </style>

    <!--style for the edittext-->
    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <!-- Used for the bottom line when not selected / focused -->
        <item name="android:colorControlNormal">#9e9e9e</item>
        <item name="android:colorControlActivated">@color/primary</item>
        <item name="android:colorControlHighlight">@color/primary</item>
        <!-- colorControlActivated & colorControlHighlight use the colorAccent color by default -->

    </style>

    <style name="AlertDialog" parent="android:Theme.Material.Light.Dialog.Alert">
        <!--
        <item name="android:windowBackground">@color/whitebg</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:buttonBarButtonStyle">@style/DialogButtonStyle</item>
        -->

        <item name="android:colorPrimary">@color/primary_dark</item>
        <item name="android:colorAccent">@color/primary_dark</item>
    </style>

</resources>